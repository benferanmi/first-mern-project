{
  "version": 2.1,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm install && npm run build",
        "outputDirectory": "client/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.jsx" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}
